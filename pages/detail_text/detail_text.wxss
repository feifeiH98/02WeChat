/* pages/detail/detail.wxss */
.detail{
  display: flex;
  flex-direction: column
}
.bigImage{
  width: 100%;
  height: 460rpx;
}
.musicIcon{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  left: 50%;
  top: 200rpx;
  margin-left: -30rpx;
}
.headInfo{
  display: flex;
  margin-left:20rpx ;
  margin-top: 30rpx;
  vertical-align: middle;
  text-align: center;
  /* flex-flow: column */
}
.headInfo image{
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
  margin-left: 10rpx;
  margin-right: 20rpx
}
.headInfo text{
  font-size: 14px;
  vertical-align: middle;
  text-align: center;
  margin-left: 10rpx;
  padding-top: 12rpx

}
.title{
  margin: 30rpx 20rpx;
  font-size: 46rpx;
  font-weight: 500;
}
.iconContainer{
  position: relative
}
.line{
  border: solid 2rpx #888;
  z-index: -1
}
.icon{
  float: right;
  margin-right: 40rpx ;
  margin-top: -45rpx
}
.icon image{
  width:90rpx;
  height:90rpx;
  margin-right:20rpx;
}
button{
  width: 100px;
  height: 40px;
  font-size: 40rpx;
  vertical-align: middle;
  text-align: center;
  margin: 20rpx auto ;
  background-color: rgba(247, 187, 139, 0.555) 
}
.textDetail{
  font-size: 40rpx;
  color: rgb(114, 113, 113);
  text-indent: 16px;
  line-height: 50rpx;
  margin-bottom: 40rpx
}